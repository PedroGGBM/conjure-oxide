language Essence 1.3

find x : int(1..3)
find b : bool
such that
    b = or( [ [true, false]
            , [true, false]
            , [true, false]
            ][x] )

find cs : matrix indexed by [int(1..3)] of bool
such that
    and([ cs[i] = or( [ [true, false]
                      , [true, false]
                      , [true, false]
                      ][i] )
        | i : int(1..3)
        ])
